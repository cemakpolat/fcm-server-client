{
  "name": "istanbul-fcm-server",
  "version": "1.0.0",
  "description": "Professional Firebase Cloud Messaging server with Istanbul-themed web interface",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "lint": "eslint .",
    "format": "prettier --write .",
    "build": "echo 'No build step required for Node.js server'",
    "docker:build": "docker build -t istanbul-fcm-server .",
    "docker:run": "docker run -p 3001:3001 istanbul-fcm-server"
  },
  "keywords": [
    "firebase",
    "fcm",
    "push-notifications",
    "nodejs",
    "express",
    "istanbul",
    "real-time",
    "messaging"
  ],
  "author": "Istanbul FCM Team",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "firebase-admin": "^12.0.0"
    
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/istanbul-fcm-server.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/istanbul-fcm-server/issues"
  },
  "homepage": "https://github.com/your-org/istanbul-fcm-server#readme"
}
